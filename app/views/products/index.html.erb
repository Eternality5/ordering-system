<div class="flex-col">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-2xl">Products</h1>

  <div id="products">
    <% @products.each do |product| %>
      <%= render product %>
      <p>
        <%= link_to "Show this product", product %>
      </p>
    <% end %>
  </div>

  <span>
    <%= link_to "New product", new_product_path %>
  </span>
</div>